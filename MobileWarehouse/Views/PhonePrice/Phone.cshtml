@model IEnumerable<MobileWarehouse.Entity.Models.Phone>
@{
  Layout = null;
}
<!DOCTYPE html>

<html>
<head>
  <title>Smartphone store</title>
</head>
<body>
  <h3>Smartphones</h3>
  <table>
    <tr>
      <td>Model</td>
      <td>Manufacturer</td>
      <td>Price</td>
      <td></td>
    </tr>
    @foreach (var phone in Model)
    {
      <tr>
        <td>@phone.Name</td>
        <td>@phone.Company</td>
        <td>@phone.Price</td>
        <td><a href="~/PhonePrice/Buy/@phone.Id">Buy</a></td>
      </tr>
    }
  </table>
</body>
</html>